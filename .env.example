# Flask Configuration
FLASK_APP=main.py
FLASK_ENV=development
FLASK_DEBUG=True

# Database Configuration
DATABASE_URL=sqlite:///instance/ecom.db

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-here
JWT_TOKEN_LOCATION=headers

# CORS Configuration
FRONTEND_URL=http://localhost:3000
FRONTEND_URL_PRODUCTION=https://yourapp.com

# Admin User Credentials (only for development/seeding)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=adminpass

# Application Settings
APP_NAME=E-Commerce Project
APP_VERSION=1.0.0

# Email Configuration (if you add email functionality later)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-password

# Upload Configuration
UPLOAD_FOLDER=/path/to/uploads
MAX_CONTENT_LENGTH=16777216
